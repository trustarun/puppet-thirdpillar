#use this property file to configure hosts / credentials etc. i.e anything that can be configured at run time (post build).



#############################

# Email Server configuration

##############################

email.host=<%= @email_host %>

email.port=<%= @email_port %>

email.userName=<%= @email_userName %>

email.password=<%= @email_password %>

#email.use.external.client if set to true will pass the prepared email message to integration service. 

email.use.external.client=<%= @email_use_external_client %>

email.default.from.address=<%= @email_default_from_address %>



# Web App Server URL Properties

webapp.server.scheme=<%= @webapp_server_scheme %>

webapp.server.name=<%= @webapp_server_name %>

webapp.server.port=<%= @webapp_server_port %>

webapp.server.contextpath=<%= @webapp_server_contextpath %>

webapp.server.url=<%= @webapp_server_url %>

webapp.server.baseurl=<%= @webapp_server_baseurl %>





